<ul id="lists">
  <% sort_lists(@lists) do |list| %>
    <li <%== list_completed(list) %>>
    <a href="/lists/<%= list[:id] %>" class="add">
    <h2><%= list[:name] %></h2> 
    <p><%= "#{list[:todos_remaining_count]}/#{list[:todos_count]}" %><p>
    </a>
    </li>
  <% end %>
</ul>

<% content_for :header_links do %>
  <a class="add" href="/lists/new">New list</a>
<% end %>